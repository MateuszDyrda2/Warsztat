<Window x:Class="Warsztat.View.MyPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warsztat.View"
        mc:Ignorable="d"
        Title="MyPopup" Height="500" Width="300">
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125" />
            <ColumnDefinition Width="125" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Button Content="Save" Click="SaveButton_Click" Grid.Column="0" Grid.Row="7" VerticalAlignment="Top" Height="30" Width="60"/>
        <Button Content="Cancel" Click="CancelButton_Click"  Grid.Column="1" Grid.Row="7" VerticalAlignment="Top" Height="30" Width="60"/>
    </Grid>
</Window>
