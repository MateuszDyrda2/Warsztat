<Window x:Class="Warsztat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warsztat"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Choose would you like to do:" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" Width="318" Height="40" FontSize="20"/>
        <Button x:Name="loginButton" Content="Log in" HorizontalAlignment="Left" Margin="241,131,0,0" VerticalAlignment="Top" Height="33" Width="109" Click="openLoginWindow"/>
        <Button x:Name="exitButton" Content="Exit app" HorizontalAlignment="Left" Margin="400,131,0,0" VerticalAlignment="Top" Height="33" Width="109" Click="exitApp"/>

    </Grid>
</Window>
